<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp"
     android:layout_marginTop="20dp"
     android:layout_marginBottom="20dp"
     android:visibility="gone"
     android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/infodialog"
        android:text="Please Click On Time To Reset Tracking Start and End Time "
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/dashboard_icon_background"
        android:id="@+id/txtstartTime"
        android:gravity="center"
        android:textColor="#000000"
        android:textColorHint="#c0c0c0"
        android:textSize="16sp"
        android:hint="Set Start Time"
        android:layout_gravity="left"
        />

     <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/dashboard_icon_background"
        android:id="@+id/txtEndTime"
        android:gravity="center"
        android:textColor="#000000"
        android:textColorHint="#c0c0c0"
        android:textSize="16sp"
        android:hint="Set End Time"
        android:layout_gravity="right"
         />
</FrameLayout>
 </LinearLayout>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_button_start_stop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:src="@drawable/start_button"
        android:layout_marginTop="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d3d3d3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/txtProfile"
            android:textSize="20sp"
            android:background="#ffffff"
            android:textColor="@color/colorAccent"
            android:layout_margin="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawablePadding="5dip"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="My\nProfile"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/txtMap"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#ffffff"
            android:textColor="@color/colorAccent"
            android:drawablePadding="5dip"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="My\nLocation"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/txtList"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#ffffff"
            android:textColor="@color/colorAccent"
            android:drawablePadding="5dip"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="My\nOrders"/>

    </LinearLayout>
</RelativeLayout>